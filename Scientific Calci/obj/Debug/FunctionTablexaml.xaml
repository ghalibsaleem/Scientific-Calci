<Page
    x:Class="Scientific_Calci.FunctionTablexaml"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Scientific_Calci"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <TextBox x:ConnectionId='1'  x:Name="ƒx"
                  Text="ƒx"
                  Grid.Row="0"
                  Margin="10,10,10,10"
                  TextWrapping="NoWrap"
                  InputScope="Number"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  FontSize="25" 
                  VerticalAlignment="Stretch"
                                             
                                               
                                                   />

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox x:ConnectionId='19' x:Name="X1"
                     Grid.Column="0"
                     Text="X1"
                     FontSize="25"
                     InputScope="NumberFullWidth"
                     TextAlignment="Center"
                     VerticalAlignment="Stretch" 
                     Margin="10"
                                                
                                                  
                                                      />
                <TextBox x:ConnectionId='20' x:Name="X2"
                     Grid.Column="1" 
                     Text="X2"
                     InputScope="Number"
                     TextAlignment="Center"
                     FontSize="25"
                     VerticalAlignment="Stretch" 
                     Margin="10"
                                                
                                                  
                                                      />
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox x:ConnectionId='17' x:Name="h"
                     Grid.Column="0"
                     Text="h"
                     FontSize="25"
                     TextAlignment="Center"
                     InputScope="Number"
                     VerticalAlignment="Stretch" 
                     Margin="10"
                                                
                                                  
                                                      />
                <Button x:ConnectionId='18' Grid.Column="1" 
                    Content="Calculate"
                    Width="120"
                    
                    Height="65"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    BorderThickness="0"
                    Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}"
                                           />
            </Grid>
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3.05*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:ConnectionId='2' BorderThickness="0"
                        Content="Sin(X)"
                                        
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='3' BorderThickness="0"
                        Grid.Column="1"
                        Content="Cos(X)"
                                          
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='4' BorderThickness="0"
                        Grid.Column="2"
                        Content="Tan(X)"
                                           
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>

                    <Button x:ConnectionId='5' BorderThickness="0"
                        Grid.Row="0"
                        Grid.Column="3"
                        Content="Sinh(X)"
                                                   
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='6' BorderThickness="0"
                        Grid.Row="0"
                        Grid.Column="4"
                        Content="Cosh(X)"
                                                     
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='7' BorderThickness="0"
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Tanh(X)"
                                                     
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='8' BorderThickness="0"
                        Grid.Row="1"
                        Grid.Column="1"
                        Content="log(X)"
                                         
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='9' BorderThickness="0"
                        Grid.Row="1"
                        Grid.Column="2"
                        Content="("
                                        
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='10' BorderThickness="0"
                        Grid.Row="1"
                        Grid.Column="3"
                        Content="+"
                                        
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='11' BorderThickness="0"
                        Grid.Row="1"
                        Grid.Column="4"
                        Content="-"
                                         
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='12' BorderThickness="0"
                        Grid.Row="2"
                        Grid.Column="0"
                        Content="*"
                                            
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='13' BorderThickness="0"
                        Grid.Row="2"
                        Grid.Column="1"
                        Content="/" 
                                          
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='14' BorderThickness="0"
                        Grid.Row="2"
                        Grid.Column="2"
                        Content="^"
                                         
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='15' BorderThickness="0"
                        Grid.Row="2"
                        Grid.Column="3"
                        Content=")"
                                           
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    <Button x:ConnectionId='16' BorderThickness="0"
                        Grid.Row="2"
                        Grid.Column="4"
                        Content="X"                
                        Background="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>
                    
                </Grid>
                <ScrollViewer Grid.Row="1">
                    <TextBlock  x:Name="output_table"
                   TextAlignment="Left"
                   Text="S.no.        X               ƒx"
                   FontSize="25"
                   ScrollViewer.VerticalScrollMode="Enabled"
                   Margin="10"/>
                </ScrollViewer>
            </Grid>

        </Grid>
        
    
</Page>

